# KotvukAI — Environment Configuration
# Copy this file to .env and fill in your values

# Groq API key for AI features (get one at https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Server port
PORT=3000

# Environment: development | production
NODE_ENV=development

# JWT secrets — ОБЯЗАТЕЛЬНО сменить в production!
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Glassnode API key for on-chain metrics (optional, https://glassnode.com)
GLASSNODE_API_KEY=your_glassnode_api_key_here
